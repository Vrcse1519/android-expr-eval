<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_expr_eval_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        tools:context="com.github.gianlucanitti.expreval.ExprEvalDialog">

    <TextView
            android:id="@+id/evalDialogExpr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/expressionColon"/>

    <TextView
            android:id="@+id/evalDialogLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:text="@string/evalLog"/>

    <TextView
            android:id="@+id/evalDialogResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/result"/>

    <TextView
            android:id="@+id/evalDialogOkToReplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/okToReplace"/>

    <LinearLayout style="?android:attr/buttonBarStyle"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <Button style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/evalDialogCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@android:string/cancel" />

        <Button style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/evalDialogOK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@android:string/ok" />

    </LinearLayout>

</LinearLayout>
